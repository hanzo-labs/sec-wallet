action-deposit
  picker
    display: block

  .pick
    height: 75px
    min-height: 75px

  .bank.pick.pick
    padding-left: 3.5rem

    &:before
      content: ''
      display: block
      position: absolute
      width: 1.5rem
      height: 1.5rem
      background-image: url(/img/bank.svg)
      background-size: cover
      left: 1rem
      top: 50%
      transform: translateY(-50%)

  .add-bank.add-bank
    background-color: $backgroundLightDarkColor
    height: 75px
    position: relative
    z-index: 10
    padding-left: 56px
    cursor: pointer
    margin-bottom: 0

    &:before
      content: ''
      display: block
      position: absolute
      width: 40px
      height: 40px
      background-image: url(/img/plus.svg)
      background-position: center
      background-repeat: no-repeat
      left: 1rem
      top: 50%
      transform: translateY(-50%)
      border: 3px solid
      border-radius: 20px

    .add-bank-text
      height: 100%
      line-height: 75px
      padding-left: 1rem

  .address.pick.pick
    display: block

    .pick-image
      height: 40px
      width: 40px
      position: absolute
      left: 1rem
      text-align: center

      img
        height: 100%

    .pick-title
    .pick-subtitle
      padding-left: 56px
      max-width: 90%
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap

  .step-4
    currency.input.input.input.input.input
      border: 0
      background-color: $backgroundLightDarkColor

      input
        font-size: 2.5rem
        line-height: 4.5rem
        height: 4.5rem
        text-align: center

      .currency-code-text
        font-size: 2.5rem
        line-height: 4.5rem
        height: 4.5rem
        color: $white
        border-bottom: 0
        right: 1rem
        position: absolute
        display: none

      .error
        right: 100px !important

  button
    width: 100%
    margin-top: 1.5rem

    &.back
      width: 5rem

      img
        width: 1rem
        height: 1rem
        margin: 1rem 0

